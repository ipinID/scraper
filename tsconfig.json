{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist",
    "paths": { "*": ["node_modules/*"] },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2016",
    "typeRoots": ["src/types", "node_modules/@types"]
  },
  "exclude": ["node_modules/*"],
  "include": ["src/**/*"]
}
